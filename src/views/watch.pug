extends base.pug

block content
    div#videoContainer
        video(src="/" + video.fileUrl).video-watch
        div#videoControls
            button#play Play 
            button#mute Mute
            input(type="range", step="0.05",min="0", max="1")#volume 
            div
                span#currentTime 0:00
                span  / 
                span#totalTime 0:00
            div 
                input(type="range", step="0.5", value=0, min="0")#timeline
            div 
                button#fullScreen Enter Full Screen
    //-
        div.video-desc 
            p=video.title
            p=video.description
            small=video.createdAt
            br 
            small Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
            hr
            if String(video.owner._id) === String(loggedInUser._id)
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                a(href=`${video.id}/delete`) Delete Video &rarr;
block scripts 
    script(src="/static/js/videoPlayer.js")

