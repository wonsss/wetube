extends base.pug

block content
    div#videoContainer(data-id=video._id, tabindex="0")
        video(src=video.fileUrl, crossorigin).video-watch
        div#videoControls.videoControls
            div.wrap
                input(type="range", step="0.5", value=0, min="0")#timeline.videoControls__timeline
            div.videoControls__play
                span#play.videoControls__playBtn 
                    i.fas.fa-play 
                div.videoControls__time
                    span#currentTime 0:00
                    span  / 
                    span#totalTime 0:00
            div
            div.videoControls__volume
                input(type="range", step="0.05",min="0", max="1")#volume 
                span#mute 
                    i.fas.fa-volume-up
             
                span#fullScreen
                    i.fas.fa-expand

    div.video__data
        p.video__title=video.title
        small.video__owner Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.name
        br
        small.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
        if String(video.owner._id) === String(loggedInUser._id)
            br
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;

    if loggedIn
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="3", placeholder="Write nice a comment")
                button Add Comment
    div.video__comments
        ul 
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    i.fas.fa-comment 
                    span.comment__createdAt #{new Date(comment.createdAt).toLocaleDateString("ko-kr", {year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric'})}
                    br
                    span.comment__text 익명: #{comment.text}
                    if String(comment.owner._id) === String(loggedInUser._id)
                        span.deleteCommentBtn ❌
                        
block scripts 
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js")

